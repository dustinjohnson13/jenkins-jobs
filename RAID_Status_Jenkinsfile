#!groovy

stage('Run') {
    node {

        def build = "${env.JOB_NAME} - #${env.BUILD_NUMBER}".toString()

        currentBuild.result = "SUCCESS"

        try {

            def status = sh(script: 'cat /proc/mdstat', returnStdout: true).trim()

            emailext body: "$status", recipientProviders: [[$class: 'DevelopersRecipientProvider']], subject: "$build succeeded!"

        } catch (err) {
            currentBuild.result = "FAILURE"

            emailext body: "${env.JOB_NAME} failed! See ${env.BUILD_URL} for details.", recipientProviders: [[$class: 'DevelopersRecipientProvider']], subject: "$build failed!"

            throw err
        }
    }
}
